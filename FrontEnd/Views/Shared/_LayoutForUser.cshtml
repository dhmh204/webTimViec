<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @RenderSection("title", required: true)
    <link rel="icon" type="image/x-icon" href="https://static.topcv.vn/v4/image/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Lexend+Deca:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/font/fontawesome-free-6.7.1-web/fontawesome-free-6.7.1-web/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="~/css/header.css">
    <link rel="stylesheet" href="~/css/common.css">


    @RenderSection("linkCss", required: true)
    @RenderSection("linkCss2", required: false)
</head>
@{
    var userName = Context.Session.GetString("UserName") ?? "";
    var email = Context.Session.GetString("Email") ?? "";
    var id = Context.Session.GetInt32("Id") ?? 0;

}
<body>
    <header>
        <nav class="d-flex justify-content-lg-between">
            <div class="nav-left  d-flex">
                <div class="header-logo">
                    <img src="~/img/topcv-logo-6.webp" alt="">
                </div>
                <ul class="d-flex">
                    <li class="me-3 hover">
                        <a asp-controller="Home" asp-action="Index" class="font-weight-6 ">Việc làm</a>
                        <div class="drop-menu hidden align-items-center absolute">
                            <ul>
                                <li><a href="@Url.ActionLink("Index", "Home")"><i class="bi bi-search"></i>Tìm việc làm</a></li>
                                <li><a href="@Url.ActionLink("Index", "ViecLamDaUngTuyen")"><i class="bi bi-briefcase"></i> Việc làm đã ứng tuyển</a></li>
                                <li><a href="@Url.ActionLink("Index", "CongViecDaLuu")"><i class="bi bi-heart"></i>Công việc đã lưu</a></li>
                                <li><a href="@Url.ActionLink("Index", "ViecLamIT")"><i class="bi bi-laptop"></i>Việc làm IT</a></li>
                                <li><a href="@Url.ActionLink("Index", "DanhSachCongTy")"><i class="bi bi-building"></i>Danh sách công ty</a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="hover">
                        <a asp-controller="Home" asp-action="Privacy" class="font-weight-6 ">Hồ sơ & CV</a>
                        <div class="drop-menu hidden absolute">
                            <ul>
                                <li><a href=""><i class="bi bi-file-person"></i>Tạo CV</a></li>
                                <li><a href="@Url.ActionLink("Index", "TaiCVLen", new {idUV = id}))"><i class="bi bi-upload"></i></i>Tải CV lên</a></li>
                                <li><a href="@Url.ActionLink("Index", "QuanLyCV", new {idUV = id}))"><i class="bi bi-file-person"></i>Quản lý CV</a></li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="nav-right d-flex align-items-center">
                <div class="nav-right__item">
                    <div>Bạn là nhà tuyển dụng</div>
                    <a href="@Url.ActionLink("Index", "DangNhap")" class="font-weight-6">Đăng tuyển ngay <i class="fa-solid fa-angles-right"></i></i></a>
                </div>
                <div class="colum-divider"></div>
                <div class="group-icon d-flex g-10 click-icon">
                    <div class="noti">
                        <div class="noti-icon icon">
                            <i class="bi bi-bell-fill"></i>
                            <span class="noti-count align-items-center">1</span>
                        </div>
                        <div class="list-noti hidden  absolute click-drop">
                            <div class="list-noti__header d-flex g-10 justify-content-between">
                                <div>Thông báo</div>
                                <div class="text-green fw-bold">Đánh dấu là đã đọc</div>
                            </div>
                            <ul class="list-noti__main">
                                <li class="list-noti__item">
                                    <a href="">
                                        <div class="list-noti-title">Cài đặt gợi ý việc làm</div>
                                        <div class="list-noti-text">Chào mừng bạn đến với TopCV, hãy thực hiện Cài đặt gợi ý việc làm để bắt đầu hành trình tìm việc của bạn nhé!</div>
                                    </a>
                                </li>
                                <li class="list-noti__item">
                                    <a href="">
                                        <div class="list-noti-title">Cài đặt gợi ý việc làm</div>
                                        <div class="list-noti-text">Chào mừng bạn đến với TopCV, hãy thực hiện Cài đặt gợi ý việc làm để bắt đầu hành trình tìm việc của bạn nhé!</div>
                                    </a>
                                </li>
                                <li class="list-noti__item">
                                    <a href="">
                                        <div class="list-noti-title">Cài đặt gợi ý việc làm</div>
                                        <div class="list-noti-text">Chào mừng bạn đến với TopCV, hãy thực hiện Cài đặt gợi ý việc làm để bắt đầu hành trình tìm việc của bạn nhé!</div>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="personal-information click-icon">
                        <div class="ava-user d-flex g-10 align-items-center">
                            <img src="~/img/avatar-default.jpg">
                            <i class="bi bi-chevron-down menu-drop icon" onclick="handleClickIcon()"></i>
                        </div>
                        <div class="ava-user__drop-menu drop-menu hidden absolute click-drop">
                            <ul>
                                <div class="drop-menu__info d-flex">
                                    <img src="~/img/avatar-default.jpg" alt="">
                                    <div class="caption">
                                        <div class="name text-green font-weight-6">@userName</div>
                                        <div>Mã ứng viên <b class="idUser">@id</b></div>
                                        <div class="mail">@email</div>
                                    </div>
                                </div>
                                <li><a href="@Url.ActionLink("Index", "CaiDatThongTinCaNhan", new {idUV = id}))"><i class="bi bi-pencil-square"></i>Cài đặt thông tin cá nhân</a></li>
                                <li><a href="@Url.ActionLink("Index", "DoiMatKhau", new {idUV = id})"><i class="bi bi-lock"></i>Đổi mật khẩu</a></li>
                                <li><a href="@Url.ActionLink("Index", "DangNhap")" class="text-red"><i class="bi bi-arrow-bar-right "></i>Đăng xuất</a></li>
                            </ul>

                        </div>
                    </div>
                </div>
        </nav>
    </header>

    @RenderBody()


    <footer>
        <div class="d-flex container justify-content-between">
            <div class="contact-information">
                <h5 class="font-weight-6">Công ty Cổ phần TopCV Việt Nam</h5>
                <div><i class="bi bi-telephone me-3 text-green"></i>Hotline: <b>(024) 6680 5588 (Giờ hành chính)</b></div>
                <div><i class="bi bi-envelope me-3 text-green"></i>Email: <b>hotro@topcv.vn   </b></div>
                <div><i class="bi bi-geo me-3 text-green"></i>Trụ sở HN <b>Tòa FS - GoldSeason số 47 Nguyễn Tuân, P.Thanh Xuân Trung, Q.Thanh Xuân, Hà Nội</b></div>
                <div><i class="bi bi-geo me-3 text-green"></i>Chi nhánh HCM<b>Tòa nhà Dali, 24C Phan Đăng Lưu, P.6, Q.Bình Thạnh, TP HCM</b></div>

            </div>
            <div class="qr-code">
                <img src="~/img/qr_code.webp" alt="">
            </div>
        </div>
    </footer>
    <script src="~/js/header.js"></script>
    @RenderSection("linkJs", required: false)

</body>
</html>